<h1>List Cards</h1>

{% for card in cards %}
<li>
    {{ card.name }}

</li>
    {% if app.user %}

        <p><a class="btn btn-info" href="{{ path('copy_card_to_user',
            {'user_id': app.user.id, 'card_id': card.id}) }}"
              role="button">Add card + </a></p>
    {% endif %}
{% endfor %}


{% if app.session.get('user_menu') %}
    <p><a class="btn btn-success" href="{{ path('hide_user_menu') }}" role="button">Show site menu</a></p>
{% else %}
    <p><a class="btn btn-success" href="{{ path('show_user_menu') }}" role="button">Show user menu</a></p>
{% endif %}





<div class="sidebar-module">
    <h4>Registration/Login</h4>
    {% if app.user %}
        <a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a>   |
        <a href="{{ path('fos_user_security_logout') }}">Logout</a>
    {% else %}
        <a href="{{ path('fos_user_security_login') }}">Login</a>   |
        <a href="{{ path('fos_user_registration_register') }}">Register</a>
    {% endif %}
</div>
