<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="link_pub.user.link_pub_user_provider.class">Wizardry\UserBundle\Security\Core\User\FOSUBUserProvider</parameter>
        <parameter key="link_pub.user.facebook_provider.class">Wizardry\UserBundle\Security\Core\User\FacebookProvider</parameter>
        <parameter key="link_pub.user.vkontakte_provider.class">Wizardry\UserBundle\Security\Core\User\VkontakteProvider</parameter>
    </parameters>

    <services>

        <service id="sonata.admin.card" class="Wizardry\UserBundle\Admin\CardAdmin">
            <tag name="sonata.admin" manager_type="doctrine_mongodb" group="Content" label="Card"/>
            <argument />
            <argument>Wizardry\MainBundle\Document\Card</argument>
            <argument />
            <call method="setTranslationDomain">
                <argument>UserBundle</argument>
            </call>
        </service>

        <service id="sonata.admin.set" class="Wizardry\UserBundle\Admin\SetAdmin">
            <tag name="sonata.admin" manager_type="doctrine_mongodb" group="Content" label="Set"/>
            <argument />
            <argument>Wizardry\MainBundle\Document\Set</argument>
            <argument />
            <call method="setTranslationDomain">
                <argument>UserBundle</argument>
            </call>
        </service>

        <service id="sonata.admin.block" class="Wizardry\UserBundle\Admin\BlockAdmin">
            <tag name="sonata.admin" manager_type="doctrine_mongodb" group="Content" label="Block"/>
            <argument />
            <argument>Wizardry\MainBundle\Document\Block</argument>
            <argument />
            <call method="setTranslationDomain">
                <argument>UserBundle</argument>
            </call>
        </service>

        <service id="wizardry_user.registration.form.type" class="Wizardry\UserBundle\Form\Type\RegistrationFormType">
            <tag name="form.type" alias="wizardry_user_registration"/>
        </service>


        <service id="link_pub.user.facebook_provider" class="%link_pub.user.facebook_provider.class%"/>

        <service id="link_pub.user.vkontakte_provider" class="%link_pub.user.vkontakte_provider.class%"/>

        <service id="link_pub_user_provider" class="%link_pub.user.link_pub_user_provider.class%">
            <argument type="service" id="fos_user.user_manager" />
            <argument type="collection">
                <argument key="facebook">facebookId</argument>
                <argument key="vkontakte">vkontakteId</argument>
            </argument>
            <call method="setFacebookProvider">
                <argument type="service" id="link_pub.user.facebook_provider" />
            </call>
            <call method="setVkontakteProvider">
                <argument type="service" id="link_pub.user.vkontakte_provider" />
            </call>
        </service>
    </services>

</container>
